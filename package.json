{
  "name": "react-boilerplate-2022",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@craco/craco": "^6.4.5",
    "@hookform/resolvers": "^2.9.8",
    "@tanstack/react-query": "^4.10.3",
    "@tanstack/react-query-devtools": "^4.11.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.1.2",
    "classnames": "^2.3.2",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "prop-types": "^15.8.1",
    "qs": "^6.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.36.1",
    "react-router-dom": "^6.4.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "yup": "^0.32.11"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "RUNTIME_VERSION=$(git rev-parse --short HEAD) craco start",
    "build": "RUNTIME_VERSION=$(git rev-parse --short HEAD) NODE_OPTIONS=--max_old_space_size=3072 craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "lint:check": "NODE_OPTIONS='--max-old-space-size=3072' eslint . --ext=js,jsx --no-color",
    "lint:fix": "NODE_OPTIONS='--max-old-space-size=3072' eslint . --ext=js,jsx --fix",
    "audit:fix": "npm audit fix",
    "prettier:check": "prettier --check \"src/**/*.{js,jsx}\"",
    "prettier:fix": "prettier --write \"src/**/*.{js,jsx}\""
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "autoprefixer": "^10.4.12",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-extra-rules": "0.0.0-development",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.4",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-lodash": "^7.4.0",
    "eslint-plugin-no-inline-styles": "^1.0.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.17",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "tailwindcss": "^3.1.8"
  }
}
